<!-- One post item in a list -->
<div class="
    post-container
    px-3 py-3
">
    <div class="post-data-container flex flex-col gap-3">
        <% if (post.thumbnail) { %>
        <% var postDir = url_for(post.path); %>
            <div class="flex flex-row gap-4 max-h-36">
            <!-- Post thumbnail -->
            <a href="<%- url_for(post.path) %>">
                <img class="
                    h-full
                    max-w-48
                    rounded-md
                    object-cover
                    transition-all
                    hover:scale-105
                    hover:shadow-md
                    "
                    src="<%- url_for(post.path) %><%-post.thumbnail %>"
                    alt="<%- post.title %>">
        <% } %>
            <div class="flex flex-col gap-1">
            <!-- Post title -->
            <a href="<%- url_for(post.path) %>">
                <h2 class="
                    text-[var(--c-80)]
                    font-bold
                    text-xl
                    hover:text-[var(--c-theme)]
                    transition-all
                    hover:underline">
                    <%- post.title %>
                </h2>
            </a>
        <!-- Post excerpt -->
        <% if (post.excerpt) { %>
            <div class="post-excerpt text-[var(--c-60)] text-sm line-clamp-4">
                <%- post.excerpt -%>
            </div>
            <% } %>
        <% if (post.thumbnail) { %>
        </div>
        <% } %>
    </div>
        <!-- Post Statistics -->
        <div class="flex flex-wrap items-center gap-x-2 text-sm
            text-[var(--c-70)]">
            <span class="flex flex-row items-center gap-1 group">
                <iconify-icon width="16"
                    icon="mingcute:add-circle-fill"></iconify-icon>
                <time class="w-max">
                    <%- date(post.date, 'YYYY-MM-DD' ) %>
                </time>
            </span>
            <span class="flex flex-row items-center gap-1 group">
                <iconify-icon width="16"
                    icon="mingcute:refresh-3-fill"></iconify-icon>
                <time class="w-max">
                    <%= date(post.updated, 'YYYY-MM-DD' ) %>
                </time>
            </span>
            <span class="flex flex-row items-center gap-1 group">
                <iconify-icon width="16"
                    icon="mingcute:book-2-fill"></iconify-icon>
                <p class="w-max">
                    <%= wordcount(post.content) %> words, <%= min2read(post.content) %> min
                </p>
            </span>
            <!-- Categories -->
            <span class="flex flex-row items-center gap-1 group">
                <% if (post.categories && post.categories.length) { %>
                    <iconify-icon class="
                            group-hover:scale-125
                            transition-transform
                            group-hover:text-[var(--c-theme)]
                        "
                        width="16"
                        icon="mingcute:classify-2-fill" class="mr-0">
                    </iconify-icon>
                    <% post.categories.forEach(function (item) { %>
                        <a class="underline underline-offset-2"
                            href="<%- url_for(item.path.toLowerCase()) %>">
                            <%- item.name %>
                        </a>
                    <% }); %>
                <% } %>
            </span>
        </div>
        <!-- Tags -->
        <div>
            <% if (show_tags) { %>
                <%- partial('tag-list', {tags: post.tags}) %>
            <% } %>
        </div>
    </div>
</div>