
<div class="flex flex-wrap gap-1">
  <% if (tags && tags.length) { %>
    <% tags.forEach(function (tag) { %>
      <a href="<%- url_for(tag.path) %>" 
        class="text-zinc-500 dark:text-zinc-400 bg-zinc-100
          hover:bg-zinc-200
          dark:bg-transparent 
          dark:border-[1px]
          dark:border-zinc-300 dark:hover:bg-zinc-200 dark:hover:text-zinc-800
          px-[6px] py-[3px]
          text-sm rounded-full 
          hover:drop-shadow">
        #<%- tag.name %>
      </a>
    <% }); %>
  <% } %>
</div>