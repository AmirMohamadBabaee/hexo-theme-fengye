<!-- css -->
<%- css('lib/fancybox/fancybox.min.css') %>
<%- css('lib/tocbot/tocbot.min.css') %>
<!-- toc -->
<% if (toc(page.content).length !== 0) { %>
  <%- partial('_partial/toc') %>
<% } %>
<section class="px-6 max-w-prose mx-auto md:px-0">
  <!-- header -->
  <header class="overflow-hidden pt-6 pb-6 md:pt-12">
    <div class="pt-4 md:pt-6">
      <!-- Title -->
      <div id="article-title" class="leading-snug mb-4 md:mb-6">
        <p class="text-3xl font-bold"><%- page.title %></p>
      </div>
      <!-- Meta data -->
      <div>
        <section class="flex flex-wrap items-center gap-x-2 text-sm text-zinc-500 dark:text-zinc-400">
          <!-- Dates -->
          <span class="flex items-center gap-1">
            <iconify-icon class="transition-all hover:-translate-y-1" width="18" icon="mingcute:file-new-fill" ></iconify-icon>
            Created: <time class="w-max"><%- date(page.date, "YYYY-MM-DD") %></time>
          </span>
          <span class="flex items-center gap-1">
            <iconify-icon class="transition-all hover:-translate-y-1" width="18" icon="mingcute:edit-2-fill" ></iconify-icon>
            Edited: <time class="w-max"><%- date(page.updated, "YYYY-MM-DD") %></time>
          </span>
          <!-- Word count -->
          <span class="flex items-center gap-1">
            <iconify-icon class="transition-all hover:-translate-y-1" width="18" icon="mingcute:book-6-fill" ></iconify-icon>
            <span><%= wordcount(page.content) %> words, <%= min2read(page.content) %> min</span>
          </span>
          <!-- Categories -->
          <% if (page.categories && page.categories.length) { %>
            <!-- <span class="text-gray-400">Â·</span> -->
            <span class="flex items-center gap-1">
              <iconify-icon class="transition-all hover:-translate-y-1" width="18" icon="mingcute:classify-2-fill" class="mr-0"></iconify-icon>
              <%- list_categories(page.categories, {
                show_count: false,
                class: 'article-category',
                style: 'none',
                separator: '/'
              }) %>
            </span>
          <% } %>
        </section>
      </div>
      <!-- tags -->
      <div class="flex flex-wrap gap-1 pt-2">
        <% if (page.tags && page.tags.length) { %>
          <% page.tags.forEach(function (tag) { %>
            <a href="<%- url_for(tag.path) %>" class="transition-transform hover:scale-110 hover:rotate-[3deg] bg-gray-100 dark:bg-zinc-800 px-2 py-1 text-sm rounded-md transition-colors hover:bg-gray-200">
              <p><%- tag.name %></p>
            </a>
          <% }); %>
        <% } %>
      </div>
    </div>
  </header>
  <!-- content -->
  <article class="post-content prose m-auto slide-enter-content dark:prose-invert">
    <%- page.content %>
  </article>

  <!-- prev and next -->
  <div class="flex justify-between mt-4 pt-4 border-t border-zinc-200 dark:border-zinc-700 test-sm align-middle gap-2">
    <div>
      <% if (page.prev) { %>
        <a href="<%- url_for(page.prev.path) %>" class="text-sm text-gray-400 hover:text-gray-500 hover:-translate-x-1 transition-all flex justify-center">
          <iconify-icon width="20" icon="ri:arrow-left-s-line" data-inline="false"></iconify-icon>
          <%- page.prev.title %>
        </a>
      <% } %>
    </div>
    <div class="border-l border-1 border-gray-400 pl-2">
      <% if (page.next) { %>
        <a href="<%- url_for(page.next.path) %>" class="text-sm text-gray-400 hover:text-gray-500 flex justify-center hover:translate-x-1 transition-all">
          <%- page.next.title %>
          <iconify-icon width="20" icon="ri:arrow-right-s-line" data-inline="false"></iconify-icon>
        </a>
      <% } %>
    </div>
  </div>

  <!-- comment -->
  <div class="article-comments mt-12">
    <%- partial('_plugins/giscus') %>
  </div>
</section>
<!-- js inspect -->
<%- js('lib/clipboard.min') %>
<%- partial('_plugins/mathjax') %>
<%- partial('_plugins/mermaid') %>
<%- partial('_plugins/fancybox') %>
<%- partial('_plugins/tocbot') %>
