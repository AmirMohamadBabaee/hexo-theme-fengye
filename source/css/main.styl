@import 'highlight.styl'

html
  width: 100%;
  margin: 0px
  padding: 0px
  overflow-x: hidden

body
  overflow-x: hidden
  width: 100vw
  padding: 0
  margin: 0

:root {
  --c-theme: #3478f6
  --c-0: #ffffff
  --c-10: #f6f8fa
  --c-20: #f3f4f6
  --c-30: #e5e7eb
  --c-40: #d1d5db
  --c-50: #9ca3af
  --c-60: #6b7280
  --c-70: #4b5563
  --c-80: #374151
  --c-90: #1f2937
  --c-100: #111827
  --c-text: #444444
  --c-bg-code: #f6f8fa
  --c-code-line-number: #bbb
  --c-scrollbar: #d9d9d9
  --c-scrollbar-hover: #bbbbbb
  --c-sep: #e1e4e8
  --c-sep-2: #d1d4d8
  --c-code-language: #9ca3af
}

html.dark
  --c-theme: #4688f8
  --c-0: #181818
  --c-10: #1f1f1f
  --c-20: #282828
  --c-30: #404244
  --c-40: #5e606b
  --c-50: #7d7e80
  --c-60: #909495
  --c-70: #bbbebf
  --c-80: #c9cbcf
  --c-80: #d9d9d9
  --c-90: #e5e5e5
  --c-100: #ffffff
  --c-text: #eeeeee
  --c-bg-code: #111111
  --c-scrollbar: #333333
  --c-scrollbar-hover: #555555
  --c-sep: #5f6063
  --c-sep-2: #818488
  --c-code-language: #8c939f

header
  padding: 0px 0px

a
  color: var(--c-theme)
  transition: color 0.1s ease-in-out
  &:hover
    color: var(--c-theme)

a:hover
  color: var(--c-theme)
  cursor: pointer

::-webkit-scrollbar-track
  background-color: var(--c-0);


::-webkit-scrollbar
  width: 6px;
  height: 6px;


::-webkit-scrollbar-thumb
    background-color: var(--c-scroll);
    border-radius: 4px;

.toc-list
  li
    margin-bottom: 0.3rem

  ol
    margin-top: 0.3rem


.back-to-top:hover
  transform: scale(1.15) rotate(3deg)
  filter: drop-shadow(0 1px 2px rgb(0 0 0 / 0.1))
  transition-property: transform;
  transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
  transition-duration: 150ms;


.back-to-top
  -webkit-transform: translateZ(0)
  transition-property: bottom
  transition-duration: 0.2s
  transition-timing-function: ease-in-out
  transition-delay: 0s

.back-to-top.back-to-top-on
  bottom: 30px

@keyframes enter
  0%
    opacity: 0
    transform: translateY(10px)

  to
    opacity: 1
    transform: none

[data-animate]
  --stagger: 0
  --delay: 120ms
  --start: 0ms

@media (prefers-reduced-motion:no-preference)
  [data-animate]
    animation: enter .6s both
    animation-delay: calc(var(--stagger) * var(--delay) + var(--start))

[data-animation-controller=false] [data-animate]
  animation: none;

.slide-enter-content
  counter-reset: enter-count

.slide-enter-content > *
  --stagger: 0
  --delay: 10ms
  --start: 0ms
  animation: enter 1s both 1
  animation-delay: calc(var(--start) + var(--stagger) * var(--delay))

.slide-enter-content > p
  counter-increment: enter-count
  --stagger: counter(enter-count)

.post-content
  hr.footnotes-sep
    background-color: var(--c-sep)
    margin-bottom: 1.0rem
    margin-right: 50%;
  hr
    background-color: var(--c-sep)
    height: 1px
    margin: 1.5rem 0
  border-bottom: 0
  blockquote
    padding-left: 8px
    p
      margin: 0px 4px
      font-style: normal
      color: #aaa
  code
    ::before
      content: ''

hr
  border: 0px

::selection
  background-color: var(--c-theme)
  color: var(--c-0)

.prose
  h2
    margin-top: 1.0em
    margin-bottom: 0.6em
  p
    margin: 0.8rem 0px
    line-height: 1.5
  li
    margin: 0px
  ul
    margin: 0px
  ol
    margin: 0px
    p
      margin: 0px
  input
    margin: 0px
  code::before
    content: ''
  code::after
    content: ''
  code
    background-color: var(--c-bg-code)
    border-radius: 4px
    padding: 0.2em 0.3em
    font-size: 0.9em
    font-weight: 400
  a
    color: var(--c-theme)
    transition: color 0.2s ease-in-out
  blockquote
    ::before
      content: ''
  .footnotes
    font-size: 0.8rem
  .footnote-backref
    text-decoration: none
    &:hover
      color: var(--c-theme)
      transform: translateY(-3px)
      transition-property: transform;
      transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
  .fancybox-img
    img:hover
      transform: scale(1.01)
      transition-property: transform;
      transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
      transition-duration: 200ms;
    img
      margin-bottom: 0.5rem
  .fancybox-alt
    font-size: 0.9rem
    text-align: center
    color: #aaa
    margin: 0px 0px
    padding: 0px 0px
    font-style: normal
    width: 100%
    display: block

li.task-list-item
  list-style-type: none

li.task-list-item .task-list-item-checkbox
  margin: 0 0.2em 0.25em -1.6em;

  input:checked
    color: var(--c-theme)
    text-decoration: line-through

.post-excerpt
  a
    text-decoration: underline
    &:hover
      color: var(--c-theme)


figure.highlight
  display: flex
  flex-direction: column
  background-color: var(--c-bg-code)
  border-radius: 10px
  border: 1px solid var(--c-sep)
  &::-webkit-scrollbar
    height: 4px              /* height of horizontal scrollbar ‚Üê You're missing this */
    width: 0px               /* width of vertical scrollbar */
    border: 1px solid red
    color: green
    padding: 4px
    margin: 4px
  
  &::-webkit-scrollbar-thumb:horizontal
    background-color: var(--c-50)
    color: red

  &::-webkit-scrollbar-track:horizontal
    background-color: var(--c-bg-code)
    color: red

  .code-language
    font-size: 0.8rem
    color: var(--c-50)
    background-color: var(--c-bg-code)
    display: block
  .copy-icon
    right: 8px
    top: 8px
    width: 30px
    height: 30px
    background-color: var(--c-bg-code)
    border: 1px solid var(--c-sep)
    color: var(--c-80)
    position: absolute
    cursor: pointer
    border-radius: 4px
    padding: 4px
    // box-shadow: 0 0px 4px rgba(0, 0, 0, 0.3)
    &:hover
      background-color: var(--c-30)
